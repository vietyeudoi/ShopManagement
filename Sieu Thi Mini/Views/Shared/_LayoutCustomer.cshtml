@using Sieu_Thi_Mini.Helpers
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiniMart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --primary: #e63946;
            --primary-dark: #d00000;
            --primary-light: #ff4757;
            --light-bg: #f8f9fa;
            --border-color: #e9ecef;
            --shadow-sm: 0 2px 4px rgba(0,0,0,0.04);
            --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
            --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        body {
            background-color: var(--light-bg);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        /* ========== TOP BAR ========== */
        .top-bar {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: white;
            font-size: 0.875rem;
            padding: 0.625rem 0;
            box-shadow: var(--shadow-sm);
        }

        .top-bar-link {
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .top-bar-link:hover {
                color: white;
                transform: scale(1.05);
            }

        .top-bar .bi {
            font-size: 1.1rem;
        }

        /* ========== NAVBAR ========== */
        .main-navbar {
            background: white;
            box-shadow: var(--shadow-md);
            padding: 1rem 0;
            transition: var(--transition);
        }

            .main-navbar.scrolled {
                padding: 0.5rem 0;
                box-shadow: var(--shadow-lg);
            }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary) !important;
            font-size: 1.75rem;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .navbar-brand:hover {
                color: var(--primary-dark) !important;
                transform: translateY(-2px);
            }

        .brand-icon {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            padding: 0.625rem;
            border-radius: 12px;
            box-shadow: var(--shadow-md);
            transition: var(--transition);
        }

        .navbar-brand:hover .brand-icon {
            transform: rotate(-10deg) scale(1.1);
            box-shadow: var(--shadow-lg);
        }

        /* ========== SEARCH FORM ========== */
        .search-form {
            position: relative;
            max-width: 500px;
            width: 100%;
        }

            .search-form .form-control {
                border-radius: 50px;
                border: 2px solid var(--border-color);
                padding: 0.875rem 4.5rem 0.875rem 1.5rem;
                font-size: 0.9375rem;
                transition: var(--transition);
                box-shadow: var(--shadow-sm);
                width: 100%;
            }

                .search-form .form-control:focus {
                    border-color: var(--primary);
                    box-shadow: 0 0 0 0.25rem rgba(230, 57, 70, 0.15);
                    transform: translateY(-1px);
                }

            .search-form .btn {
                position: absolute;
                right: 4px;
                top: 4px;
                border-radius: 50px;
                background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
                border: none;
                padding: 0.65rem 1.75rem;
                font-weight: 600;
                transition: var(--transition);
                box-shadow: var(--shadow-sm);
            }

                .search-form .btn:hover {
                    background: linear-gradient(135deg, var(--primary-dark) 0%, #b00000 100%);
                    box-shadow: var(--shadow-md);
                    transform: scale(1.05);
                }

        /* ========== NAV ACTIONS ========== */
        .nav-action-btn {
            color: #495057;
            transition: var(--transition);
            text-decoration: none;
            padding: 0.5rem 0.75rem;
            border-radius: 12px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.25rem;
        }

            .nav-action-btn:hover {
                color: var(--primary);
                background: rgba(230, 57, 70, 0.05);
                transform: translateY(-2px);
            }

        .cart-icon-wrapper {
            position: relative;
        }

        .cart-badge {
            position: absolute;
            top: -8px;
            right: -10px;
            font-size: 0.7rem;
            min-width: 22px;
            height: 22px;
            line-height: 22px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: white;
            font-weight: 700;
            box-shadow: 0 2px 8px rgba(230, 57, 70, 0.4);
            animation: pulse 2s infinite;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }
        }

        /* ========== USER DROPDOWN ========== */
        .user-dropdown {
            position: relative;
        }

            .user-dropdown .dropdown-toggle {
                background: rgba(230, 57, 70, 0.1);
                border: 2px solid transparent;
                border-radius: 50px;
                padding: 0.5rem 1.25rem;
                color: var(--primary);
                font-weight: 600;
                transition: var(--transition);
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

                .user-dropdown .dropdown-toggle:hover {
                    background: rgba(230, 57, 70, 0.15);
                    border-color: var(--primary);
                    transform: translateY(-2px);
                }

                .user-dropdown .dropdown-toggle::after {
                    margin-left: 0.5rem;
                }

            .user-dropdown .dropdown-menu {
                border-radius: 12px;
                border: none;
                box-shadow: var(--shadow-lg);
                padding: 0.5rem;
                min-width: 220px;
                margin-top: 0.5rem;
            }

            .user-dropdown .dropdown-item {
                border-radius: 8px;
                padding: 0.75rem 1rem;
                transition: var(--transition);
                display: flex;
                align-items: center;
                gap: 0.75rem;
            }

                .user-dropdown .dropdown-item:hover {
                    background: rgba(230, 57, 70, 0.1);
                    color: var(--primary);
                    transform: translateX(5px);
                }

                .user-dropdown .dropdown-item i {
                    font-size: 1.125rem;
                    width: 20px;
                }

            .user-dropdown .dropdown-divider {
                margin: 0.5rem 0;
                border-color: var(--border-color);
            }

            .user-dropdown .dropdown-item.text-danger:hover {
                background: rgba(230, 57, 70, 0.1);
                color: var(--primary-dark) !important;
            }

        /* ========== NAVIGATION MENU ========== */
        .nav-menu {
            background: white;
            border-bottom: 1px solid var(--border-color);
            box-shadow: var(--shadow-sm);
        }

            .nav-menu .nav-link {
                color: #495057;
                font-weight: 500;
                padding: 0.875rem 1.25rem;
                border-radius: 8px;
                transition: var(--transition);
                position: relative;
            }

                .nav-menu .nav-link:hover {
                    color: var(--primary);
                    background: rgba(230, 57, 70, 0.05);
                }

                .nav-menu .nav-link.active {
                    color: var(--primary);
                    background: rgba(230, 57, 70, 0.1);
                }

                    .nav-menu .nav-link.active::after {
                        content: '';
                        position: absolute;
                        bottom: -1px;
                        left: 50%;
                        transform: translateX(-50%);
                        width: 60%;
                        height: 3px;
                        background: linear-gradient(90deg, transparent, var(--primary), transparent);
                        border-radius: 2px 2px 0 0;
                    }

        /* ========== MAIN CONTENT ========== */
        main {
            flex: 1;
            animation: fadeIn 0.5s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* ========== FOOTER ========== */
        .main-footer {
            background: linear-gradient(180deg, #1a1d20 0%, #212529 100%);
            color: #adb5bd;
            padding: 4rem 0 1.5rem;
            margin-top: 4rem;
            position: relative;
        }

            .main-footer::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, var(--primary), var(--primary-dark), var(--primary));
            }

        .footer-title {
            color: white;
            font-weight: 700;
            margin-bottom: 1.5rem;
            font-size: 1.125rem;
            position: relative;
            padding-bottom: 0.75rem;
        }

            .footer-title::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 50px;
                height: 3px;
                background: var(--primary);
                border-radius: 2px;
            }

        .footer-brand {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
        }

        .footer-brand-icon {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            padding: 0.75rem;
            border-radius: 12px;
            box-shadow: var(--shadow-md);
        }

        .footer-link {
            color: #adb5bd;
            text-decoration: none;
            transition: var(--transition);
            display: inline-block;
            padding: 0.375rem 0;
            position: relative;
        }

            .footer-link::before {
                content: '›';
                position: absolute;
                left: -15px;
                opacity: 0;
                transition: var(--transition);
            }

            .footer-link:hover {
                color: var(--primary);
                padding-left: 15px;
            }

                .footer-link:hover::before {
                    opacity: 1;
                    left: 0;
                }

        .social-icon {
            width: 42px;
            height: 42px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            background: #343a40;
            color: white;
            transition: var(--transition);
            font-size: 1.25rem;
        }

            .social-icon:hover {
                background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
                transform: translateY(-4px);
                box-shadow: var(--shadow-lg);
                color: white;
            }

        .footer-contact-item {
            display: flex;
            align-items: start;
            gap: 0.75rem;
            margin-bottom: 1rem;
            padding: 0.5rem;
            border-radius: 8px;
            transition: var(--transition);
        }

            .footer-contact-item:hover {
                background: rgba(255, 255, 255, 0.05);
            }

            .footer-contact-item i {
                color: var(--primary);
                font-size: 1.125rem;
                margin-top: 0.125rem;
            }

        .footer-bottom {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: 3rem;
            padding-top: 2rem;
            text-align: center;
        }

        /* ========== RESPONSIVE ========== */
        @@media (max-width: 991.98px) {
            .navbar-brand {
                font-size: 1.5rem;
            }

            .search-form {
                margin: 1rem 0;
            }

            .nav-menu .nav-link {
                padding: 0.75rem 1rem;
                font-size: 0.9375rem;
            }

            .main-footer {
                padding: 3rem 0 1.5rem;
            }
        }

        @@media (max-width: 575.98px) {
            .top-bar {
                font-size: 0.8125rem;
            }

                .top-bar .d-flex.gap-4 > span:last-child {
                    display: none;
                }

            .nav-menu .nav-pills {
                flex-direction: column;
            }

            .nav-menu .nav-link {
                text-align: left;
            }
        }

        /* ========== UTILITIES ========== */
        .hover-lift {
            transition: var(--transition);
        }

            .hover-lift:hover {
                transform: translateY(-4px);
                box-shadow: var(--shadow-lg);
            }

        /* Scrollbar Styling */
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, var(--primary), var(--primary-dark));
            border-radius: 5px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--primary-dark);
            }
    </style>
</head>
<body>

    <!-- TOP BAR -->
    <div class="top-bar">
        <div class="container">
            <div class="d-flex flex-wrap justify-content-between align-items-center">
                <div class="d-flex gap-4">
                    <span class="d-flex align-items-center gap-2">
                        <i class="bi bi-telephone-fill"></i>
                        <span>Hotline: 1900-xxxx</span>
                    </span>
                    <span class="d-flex align-items-center gap-2">
                        <i class="bi bi-clock-fill"></i>
                        <span>7:00 - 22:00 hàng ngày</span>
                    </span>
                </div>
                <div class="d-flex gap-3">
                    <a href="#" class="top-bar-link"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="top-bar-link"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="top-bar-link"><i class="bi bi-youtube"></i></a>
                </div>
            </div>
        </div>
    </div>

    <!-- MAIN NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light main-navbar sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <div class="brand-icon">
                    <i class="bi bi-cart3 fs-4 text-white"></i>
                </div>
                MiniMart
            </a>

            <button class="navbar-toggler border-0 shadow-sm" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <!-- Search - center on large screen -->
                <div class="mx-auto my-3 my-lg-0">
                    <form class="search-form" asp-area="" asp-controller="Home" asp-action="Search" method="get">
                        <input class="form-control"
                               type="search"
                               name="keyword"
                               placeholder="Tìm kiếm sản phẩm..."
                               value="@Context.Request.Query["keyword"]"
                               aria-label="Search">
                        <button class="btn text-white" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>

                <!-- Right actions -->
                <div class="d-flex align-items-center gap-3 ms-lg-4">
                    <!-- Cart -->
                    <a class="nav-action-btn" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                        <div class="cart-icon-wrapper">
                            <i class="bi bi-cart3 fs-4"></i>
                            @if (Context.GetCartCount() > 0)
                            {
                                <span class="cart-badge">@Context.GetCartCount()</span>
                            }
                        </div>
                        <small class="d-none d-lg-block fw-medium">Giỏ hàng</small>
                    </a>

                    <!-- User Dropdown -->
                    <div class="user-dropdown dropdown">
                        <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle fs-5"></i>
                            <span class="d-none d-lg-inline">Tài khoản</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" asp-area="Customer" asp-controller="Profile" asp-action="Index">
                                    <i class="bi bi-person-fill"></i>
                                    <span>Trang cá nhân</span>
                                </a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item" asp-area="Customer" asp-controller="Profile" asp-action="ChangePassword">
                                    <i class="bi bi-key-fill"></i>
                                    <span>Đổi mật khẩu</span>
                                </a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item text-danger" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i>
                                    <span>Đăng xuất</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- NAVIGATION MENU -->
    <nav class="nav-menu">
        <div class="container">
            <ul class="nav nav-pills nav-fill py-2 mb-0">
                <li class="nav-item">
                    <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door-fill me-2"></i>Trang chủ
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Customer" asp-controller="Order" asp-action="History">
                        <i class="bi bi-clock-history me-2"></i>Lịch sử đơn hàng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="bi bi-fire me-2"></i>Khuyến mãi
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">
                        <i class="bi bi-telephone-fill me-2"></i>Liên hệ
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main role="main">
        <div class="container py-4 py-lg-5">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="main-footer">
        <div class="container">
            <div class="row g-4 g-lg-5">
                <div class="col-lg-4">
                    <div class="footer-brand">
                        <div class="footer-brand-icon">
                            <i class="bi bi-cart3 fs-3 text-white"></i>
                        </div>
                        <h5 class="text-white fw-bold mb-0 fs-4">MiniMart</h5>
                    </div>
                    <p class="mb-4 lh-lg">Siêu thị mini tiện lợi - Mang thế giới về tay bạn với giá cả phải chăng và chất lượng tốt nhất.</p>
                    <div class="d-flex gap-3 flex-wrap">
                        <a href="#" class="social-icon" title="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="social-icon" title="Instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="social-icon" title="YouTube">
                            <i class="bi bi-youtube"></i>
                        </a>
                        <a href="#" class="social-icon" title="TikTok">
                            <i class="bi bi-tiktok"></i>
                        </a>
                    </div>
                </div>

                <div class="col-6 col-lg-2">
                    <h6 class="footer-title">Liên kết nhanh</h6>
                    <ul class="list-unstyled mb-0">
                        <li><a href="#" class="footer-link">Giới thiệu</a></li>
                        <li><a href="#" class="footer-link">Chính sách bảo mật</a></li>
                        <li><a href="#" class="footer-link">Điều khoản sử dụng</a></li>
                        <li><a href="#" class="footer-link">Hướng dẫn mua hàng</a></li>
                    </ul>
                </div>

                <div class="col-6 col-lg-3">
                    <h6 class="footer-title">Hỗ trợ khách hàng</h6>
                    <ul class="list-unstyled mb-0">
                        <li><a href="#" class="footer-link">Chính sách đổi trả</a></li>
                        <li><a href="#" class="footer-link">Phương thức thanh toán</a></li>
                        <li><a href="#" class="footer-link">Vận chuyển & giao nhận</a></li>
                        <li><a href="#" class="footer-link">Câu hỏi thường gặp</a></li>
                    </ul>
                </div>

                <div class="col-lg-3">
                    <h6 class="footer-title">Thông tin liên hệ</h6>
                    <div class="footer-contact-item">
                        <i class="bi bi-geo-alt-fill"></i>
                        <span>123 Đường ABC, TP.HCM</span>
                    </div>
                    <div class="footer-contact-item">
                        <i class="bi bi-telephone-fill"></i>
                        <span>Hotline: 1900-xxxx</span>
                    </div>
                    <div class="footer-contact-item">
                        <i class="bi bi-envelope-fill"></i>
                        <span>support@minimart.vn</span>
                    </div>
                    <div class="footer-contact-item">
                        <i class="bi bi-clock-fill"></i>
                        <span>7:00 - 22:00 hàng ngày</span>
                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <p class="mb-0 small">
                    © 2025 MiniMart. All rights reserved. | Designed with <i class="bi bi-heart-fill text-danger"></i>
                </p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        // Smooth scroll effect for navbar
        let lastScroll = 0;
        const navbar = document.querySelector('.main-navbar');

        window.addEventListener('scroll', () => {
            const currentScroll = window.pageYOffset;

            if (currentScroll > 100) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }

            lastScroll = currentScroll;
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>