@using Sieu_Thi_Mini.Helpers
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SieuthiMini</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">

                <!-- LOGO -->
                <a class="navbar-brand fw-bold text-danger"
                   asp-controller="Home" asp-action="Index">
                    🛒 SieuthiMini
                </a>

                <!-- TOGGLE MOBILE -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- MENU TRÁI -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                Trang chủ
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area="Customer"
                               asp-controller="Order"
                               asp-action="History">
                                Lịch sử đơn hàng
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">
                                Liên hệ
                            </a>
                        </li>
                    </ul>

                    <!-- SEARCH -->
                    <form asp-area="" asp-controller="Home"
                          asp-action="Search"
                          method="get"
                          class="d-flex me-3">
                        <input class="form-control form-control-sm me-2"
                               type="search"
                               name="keyword"
                               placeholder="Tìm sản phẩm..."
                               value="@Context.Request.Query["keyword"]" />
                        <button class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

                    <!-- MENU PHẢI -->
                    <ul class="navbar-nav align-items-center">

                        <!-- CART -->
                        <li class="nav-item position-relative me-3">
                            <a class="nav-link"
                               asp-area="Customer"
                               asp-controller="Cart"
                               asp-action="Index">
                                <i class="bi bi-cart fs-5"></i>

                                @if (Context.GetCartCount() > 0)
                                {
                                    <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle">
                                        @Context.GetCartCount()
                                    </span>
                                }
                            </a>
                        </li>

                        <!-- PROFILE -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                <li>
                                    <a class="dropdown-item"
                                       asp-area="Customer"
                                       asp-controller="Profile"
                                       asp-action="Index">
                                        Trang cá nhân
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item text-danger"
                                       asp-controller="Account"
                                       asp-action="Logout">
                                        Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- BODY -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top text-muted py-3 mt-4">
        <div class="container text-center">
            © 2025 - MiniMart
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
