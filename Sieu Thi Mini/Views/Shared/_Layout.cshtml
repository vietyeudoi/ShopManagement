@using Sieu_Thi_Mini.Helpers
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SieuthiMini</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">

                <!-- LOGO -->
                <a class="navbar-brand fw-bold text-danger"
                   asp-controller="Home" asp-action="Index">
                    🛒 SieuthiMini
                </a>

                <!-- TOGGLE -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- MENU -->
                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- LEFT MENU -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Liên hệ</a>
                        </li>
                    </ul>

                    <!-- SEARCH -->
                    <form asp-area="" asp-controller="Home"
                          asp-action="Search"
                          method="get"
                          class="d-flex me-3">
                        <input class="form-control form-control-sm me-2"
                               type="search"
                               name="keyword"
                               placeholder="Tìm sản phẩm..."
                               value="@Context.Request.Query["keyword"]" />
                        <button class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

                    <!-- RIGHT MENU -->
                    <ul class="navbar-nav align-items-center">

                        <!-- CART -->
                        <li class="nav-item position-relative me-3">
                            <a class="nav-link"
                               asp-area="Customer"
                               asp-controller="Cart"
                               asp-action="Index">
                                <i class="bi bi-cart fs-5"></i>

                                @if (Context.GetCartCount() > 0)
                                {
                                    <span class="badge bg-danger position-absolute top-0 start-100 translate-middle rounded-pill">
                                        @Context.GetCartCount()
                                    </span>
                                }
                            </a>
                        </li>

                        <!-- LOGIN -->
                        <li class="nav-item">
                            <a class="btn btn-outline-danger btn-sm"
                               asp-controller="Account"
                               asp-action="Login">
                                <i class="bi bi-person"></i> Login
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- BODY -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top py-3 text-center text-muted mt-4">
        © 2025 - SieuthiMini
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
