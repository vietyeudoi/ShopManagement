@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_Layout"; // hoặc null nếu muốn form riêng
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 350px;">
        <!-- giảm max-width -->
        <div class="text-center mb-4">
            <h3 class="fw-bold">📝 Đăng ký</h3>
            <p class="text-muted mb-0">Tạo tài khoản mới</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle-fill me-1"></i>@ViewBag.Error
            </div>
        }

        <form asp-action="Register" asp-controller="Account" method="post">

            <div class="mb-3">
                <label class="form-label fw-bold">Họ và tên</label>
                <input type="text"
                       name="fullName"
                       class="form-control"
                       placeholder="Nhập họ tên"
                       required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <input type="email"
                       name="email"
                       class="form-control"
                       placeholder="example@gmail.com"
                       required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Mật khẩu</label>
                <input type="password"
                       name="password"
                       class="form-control"
                       placeholder="Tối thiểu 6 ký tự"
                       required minlength="6" />
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary fw-bold">
                    Đăng ký
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <span class="text-muted">Đã có tài khoản?</span>
            <a asp-action="Login" asp-controller="Account" class="fw-bold ms-1">Đăng nhập</a>
        </div>
    </div>
</div>

<style>
    .bg-light {
        background-color: #f8f9fa;
    }

    input.form-control {
        height: 42px; /* nhỏ hơn */
        font-size: 0.95rem;
    }

    button.btn {
        height: 42px;
        font-size: 0.95rem;
    }

</style>
