@model Sieu_Thi_Mini.Models.User

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Thêm người dùng";
}

<div class="container py-4">

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4 admin-breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a asp-area="Admin"
                   asp-controller="Dashboard"
                   asp-action="Index">
                    Trang quản trị
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-area="Admin"
                   asp-controller="User"
                   asp-action="Index">
                    Người dùng
                </a>
            </li>
            <li class="breadcrumb-item active">
                Thêm mới
            </li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="admin-card shadow">

                <!-- Header -->
                <div class="admin-header">
                    <h5 class="mb-0">
                        <i class="bi bi-person-plus-fill me-2"></i>
                        Thêm người dùng mới
                    </h5>
                </div>

                <!-- Body -->
                <div class="admin-body">

                    <form asp-area="Admin"
                          asp-controller="User"
                          asp-action="Create"
                          method="post"
                          class="admin-form">

                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly"
                             class="alert alert-danger small mb-4"></div>

                        <!-- Họ tên -->
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">
                                Họ tên <span class="text-danger">*</span>
                            </label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName"
                                  class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                Email <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control" />
                            <span asp-validation-for="Email"
                                  class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                Mật khẩu <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Password"
                                   type="password"
                                   class="form-control"
                                   placeholder="Ít nhất 6 ký tự" />
                            <span asp-validation-for="Password"
                                  class="text-danger small"></span>
                        </div>

                        <!-- Phone -->
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">
                                Số điện thoại
                            </label>
                            <input asp-for="Phone"
                                   class="form-control"
                                   placeholder="0123456789" />
                            <span asp-validation-for="Phone"
                                  class="text-danger small"></span>
                        </div>

                        <!-- Role -->
                        <div class="mb-4">
                            <label asp-for="Role" class="form-label">
                                Quyền người dùng <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Role" class="form-select">
                                <option value="">-- Chọn quyền --</option>
                                <option value="Admin">Quản trị viên</option>
                                <option value="Staff">Nhân viên</option>
                            </select>
                            <span asp-validation-for="Role"
                                  class="text-danger small"></span>
                        </div>

                        <hr class="my-4" />

                        <!-- Actions -->
                        <div class="admin-actions">
                            <a asp-action="Index"
                               class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i>
                                Quay lại
                            </a>

                            <button type="submit"
                                    class="btn btn-primary btn-admin-primary">
                                <i class="bi bi-save me-1"></i>
                                Lưu người dùng
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Styles {
    <style>
        /* ===== ADMIN CREATE USER ===== */

        .admin-breadcrumb a {
            text-decoration: none;
            font-weight: 500;
            color: #0d6efd;
        }

            .admin-breadcrumb a:hover {
                text-decoration: underline;
            }

        .admin-card {
            border-radius: 16px;
            overflow: hidden;
            background: #fff;
        }

        .admin-header {
            background: linear-gradient(135deg, #0d6efd, #0a58ca);
            color: #fff;
            padding: 16px 20px;
        }

            .admin-header i {
                color: #dbeafe;
            }

        .admin-body {
            padding: 24px;
        }

        /* Form */
        .admin-form .form-label {
            font-weight: 600;
            color: #444;
        }

        .admin-form .form-control,
        .admin-form .form-select {
            border-radius: 10px;
        }

        /* Actions */
        .admin-actions {
            display: flex;
            justify-content: flex-end;
            gap: 12px;
        }

        .btn-admin-primary {
            box-shadow: 0 6px 15px rgba(13, 110, 253, 0.35);
        }

            .btn-admin-primary:hover {
                transform: translateY(-1px);
                box-shadow: 0 8px 20px rgba(13, 110, 253, 0.5);
            }

        .btn-outline-secondary:hover {
            background-color: #f1f3f5;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .admin-actions {
                flex-direction: column-reverse;
            }

                .admin-actions .btn {
                    width: 100%;
                }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
