@model Sieu_Thi_Mini.Models.Category

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Xoá danh mục";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-trash3 me-2"></i>Xoá danh mục</h5>
                </div>

                <div class="card-body p-4 text-center">
                    <p>Bạn chắc chắn muốn xoá danh mục:</p>
                    <h5 class="text-danger fw-bold">@Model.CategoryName</h5>
                    <p class="text-muted small">Hành động này không thể hoàn tác.</p>

                    <form asp-area="Admin"
                          asp-controller="Category"
                          asp-action="DeleteConfirmed"
                          asp-route-id="@Model.CategoryId"
                          method="post" class="mt-4 d-flex justify-content-center gap-2">
                        @Html.AntiForgeryToken()

                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash3 me-1"></i> Xoá
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-x-circle me-1"></i> Huỷ
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
