@using Sieu_Thi_Mini.Models
@model List<Category>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý danh mục";
}

<div class="container-fluid">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0">📂 Quản lý danh mục</h3>
            <small class="text-muted">Danh sách các danh mục sản phẩm</small>
        </div>

        <a asp-area="Admin"
           asp-controller="Category"
           asp-action="Create"
           class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Thêm danh mục
        </a>
    </div>

    <!-- CARD -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-light text-center">
                    <tr>
                        <th>Tên danh mục</th>
                        <th>Mô tả</th>
                        <th style="width:120px">Trạng thái</th>
                        <th style="width:220px">Hành động</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <!-- NAME -->
                            <td class="fw-semibold">@c.CategoryName</td>

                            <!-- DESCRIPTION -->
                            <td>@c.Description</td>

                            <!-- STATUS -->
                            <td class="text-center">
                                @if (c.IsActive)
                                {
                                    <span class="badge bg-success px-3 py-2">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary px-3 py-2">Ẩn</span>
                                }
                            </td>

                            <!-- ACTIONS -->
                            <td class="text-center">
                                <a asp-area="Admin"
                                   asp-controller="Category"
                                   asp-action="Edit"
                                   asp-route-id="@c.CategoryId"
                                   class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>

                                <a asp-area="Admin"
                                   asp-controller="Category"
                                   asp-action="Toggle"
                                   asp-route-id="@c.CategoryId"
                                   class="btn btn-sm @(c.IsActive ? "btn-outline-secondary" : "btn-outline-success") me-1">
                                    <i class="bi @(c.IsActive ? "bi-eye-slash" : "bi-eye")"></i>
                                    @(c.IsActive ? "Ẩn" : "Hiện")
                                </a>

                                <a asp-area="Admin"
                                   asp-controller="Category"
                                   asp-action="Delete"
                                   asp-route-id="@c.CategoryId"
                                   class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Xoá
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>
@if (ViewBag.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            <!-- PREVIOUS -->
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   href="?page=@(ViewBag.CurrentPage - 1)">
                    &laquo;
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="?page=@i">
                        @i
                    </a>
                </li>
            }

            <!-- NEXT -->
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   href="?page=@(ViewBag.CurrentPage + 1)">
                    &raquo;
                </a>
            </li>

        </ul>
    </nav>
}
