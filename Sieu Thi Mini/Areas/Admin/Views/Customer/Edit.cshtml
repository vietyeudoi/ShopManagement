@model Sieu_Thi_Mini.Models.Customer

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Sửa khách hàng";
}

<div class="container py-4">

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4 admin-breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a asp-area="Admin"
                   asp-controller="Dashboard"
                   asp-action="Index">
                    Trang quản trị
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-area="Admin"
                   asp-controller="Customer"
                   asp-action="Index">
                    Khách hàng
                </a>
            </li>
            <li class="breadcrumb-item active">
                Sửa thông tin
            </li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="admin-card">

                <!-- Header -->
                <div class="admin-header">
                    <h5>
                        <i class="bi bi-pencil-square me-2"></i>
                        Sửa thông tin khách hàng
                    </h5>
                </div>

                <!-- Body -->
                <div class="admin-body">

                    <form asp-area="Admin"
                          asp-controller="Customer"
                          asp-action="Edit"
                          asp-route-id="@Model.CustomerId"
                          method="post"
                          class="admin-form">

                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="CustomerId" />

                        <!-- Thông tin cơ bản -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label">
                                    Họ tên <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">
                                    Email <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" type="email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">
                                    Số điện thoại
                                </label>
                                <input asp-for="Phone"
                                       class="form-control"
                                       placeholder="0123456789" />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    Mật khẩu mới
                                </label>
                                <input asp-for="Password"
                                       type="password"
                                       class="form-control"
                                       placeholder="Để trống nếu không đổi" />
                                <small class="text-muted">
                                    Chỉ nhập nếu muốn thay đổi mật khẩu
                                </small>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Địa chỉ -->
                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                                Danh sách địa chỉ
                            </label>

                            @if (Model.Addresses != null && Model.Addresses.Any())
                            {
                                <div class="list-group mb-2">
                                    @foreach (var addr in Model.Addresses)
                                    {
                                        <div class="list-group-item">
                                            <i class="bi bi-house-door me-2"></i>
                                            @addr.Address1
                                        </div>
                                    }
                                </div>

                                <small class="text-muted">
                                    Khách hàng có @Model.Addresses.Count địa chỉ.
                                    Quản lý chi tiết tại trang Hồ sơ cá nhân.
                                </small>
                            }
                            else
                            {
                                <div class="alert alert-info mb-0">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Khách hàng chưa có địa chỉ nào.
                                </div>
                            }
                        </div>

                        <!-- Trạng thái -->
                        <div class="mb-4 admin-switch">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive"
                                       class="form-check-input"
                                       type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">
                                    Tài khoản hoạt động
                                </label>
                            </div>
                            <small class="text-muted">
                                Tắt để vô hiệu hóa tài khoản này
                            </small>
                        </div>

                        <hr class="my-4" />

                        <!-- Actions -->
                        <div class="admin-actions">
                            <a asp-area="Admin"
                               asp-controller="Customer"
                               asp-action="Index"
                               class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i>
                                Quay lại
                            </a>

                            <button type="submit"
                                    class="btn btn-primary btn-admin-primary">
                                <i class="bi bi-save me-1"></i>
                                Cập nhật
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
