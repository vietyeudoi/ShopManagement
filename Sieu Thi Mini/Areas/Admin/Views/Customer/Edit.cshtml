@model Sieu_Thi_Mini.Models.Customer
@{
    ViewData["Title"] = "Sửa khách hàng";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>
                        Sửa thông tin khách hàng
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-area="Admin"
                          asp-controller="Customer"
                          asp-action="Edit"
                          asp-route-id="@Model.CustomerId"
                          method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="CustomerId" />

                        <!-- Thông tin cơ bản -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Họ tên <span class="text-danger">*</span></label>
                                <input asp-for="FullName" class="form-control" required />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" type="email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Số điện thoại</label>
                                <input asp-for="Phone" class="form-control" placeholder="0123456789" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Mật khẩu mới</label>
                                <input asp-for="Password" type="password" class="form-control"
                                       placeholder="Để trống nếu không đổi" />
                                <small class="text-muted">Chỉ nhập nếu muốn thay đổi mật khẩu</small>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Địa chỉ -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                                Danh sách địa chỉ
                            </label>

                            @if (Model.Addresses != null && Model.Addresses.Any())
                            {
                                <div class="list-group mb-2">
                                    @foreach (var addr in Model.Addresses)
                                    {
                                        <div class="list-group-item">
                                            <i class="bi bi-house-door me-2"></i>
                                            @addr.Address1
                                        </div>
                                    }
                                </div>
                                <small class="text-muted">
                                    <i class="bi bi-info-circle"></i>
                                    Khách hàng có @Model.Addresses.Count địa chỉ.
                                    Để quản lý chi tiết, khách hàng cần đăng nhập và vào trang Hồ sơ cá nhân.
                                </small>
                            }
                            else
                            {
                                <div class="alert alert-info mb-0">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Khách hàng chưa có địa chỉ nào.
                                </div>
                            }
                        </div>

                        <!-- Trạng thái -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label class="form-check-label fw-bold">
                                    Tài khoản hoạt động
                                </label>
                            </div>
                            <small class="text-muted">Tắt để vô hiệu hóa tài khoản này</small>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-area="Admin"
                               asp-controller="Customer"
                               asp-action="Index"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i>
                                Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}