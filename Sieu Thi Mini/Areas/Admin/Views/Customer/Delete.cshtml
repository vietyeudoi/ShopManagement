@model Sieu_Thi_Mini.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Xóa khách hàng</h2>

<h4>Bạn có chắc chắn muốn xóa khách hàng này?</h4>

<hr />

<dl class="row">
    <dt class="col-sm-2">Họ tên</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">SĐT</dt>
    <dd class="col-sm-10">@Model.Phone</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CustomerId" />

    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
