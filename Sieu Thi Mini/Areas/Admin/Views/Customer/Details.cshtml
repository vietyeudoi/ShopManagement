@model Sieu_Thi_Mini.Models.Customer

@{
    Layout = "_LayoutAdmin";
}

<h3>Chi tiết người dùng</h3>

<table class="table table-bordered w-50">
    <tr>
        <th>ID</th>
        <td>@Model.CustomerId</td>
    </tr>
    <tr>
        <th>Họ tên</th>
        <td>@Model.FullName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Số điện thoại</th>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <th>Trạng thái</th>
        <td>@(Model.IsActive ? "Hoạt động" : "Khóa")</td>
    </tr>
</table>

<a asp-area="Admin"
   asp-controller="User"
   asp-action="Index"
   class="btn btn-secondary">
    Quay lại
</a>
