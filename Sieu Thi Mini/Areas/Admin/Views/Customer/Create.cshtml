@model Sieu_Thi_Mini.Models.Customer
@{
    ViewData["Title"] = "Thêm khách hàng mới";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus-fill me-2"></i>
                        Thêm khách hàng mới
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-area="Admin"
                          asp-controller="Customer"
                          asp-action="Create"
                          method="post">
                        @Html.AntiForgeryToken()

                        <!-- Thông tin cơ bản -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    Họ và tên <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FullName"
                                       class="form-control"
                                       placeholder="Nguyễn Văn A"
                                       required />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    Email <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email"
                                       type="email"
                                       class="form-control"
                                       placeholder="example@email.com"
                                       required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    Mật khẩu <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Password"
                                       type="password"
                                       class="form-control"
                                       placeholder="Tối thiểu 6 ký tự"
                                       minlength="6"
                                       required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Số điện thoại</label>
                                <input asp-for="Phone"
                                       type="tel"
                                       class="form-control"
                                       placeholder="0123456789"
                                       pattern="[0-9]{10,11}" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                                <small class="text-muted">10-11 chữ số</small>
                            </div>
                        </div>

                        <!-- ❌ XÓA INPUT ADDRESS - Không còn cột Address trong Customer -->
                        <!-- Khách hàng sẽ tự thêm địa chỉ qua trang Profile sau khi đăng nhập -->

                        <div class="alert alert-info mb-3">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Lưu ý:</strong> Khách hàng có thể thêm địa chỉ giao hàng sau khi đăng nhập vào trang Hồ sơ cá nhân.
                        </div>

                        <!-- Trạng thái -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive"
                                       class="form-check-input"
                                       type="checkbox"
                                       checked />
                                <label class="form-check-label fw-bold">
                                    Kích hoạt tài khoản ngay
                                </label>
                            </div>
                            <small class="text-muted">Tài khoản có thể đăng nhập ngay sau khi tạo</small>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-area="Admin"
                               asp-controller="Customer"
                               asp-action="Index"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                Quay lại
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save me-1"></i>
                                Tạo khách hàng
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}