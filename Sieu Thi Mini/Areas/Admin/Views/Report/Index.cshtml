@model List<Sieu_Thi_Mini.Models.Order>

@{
    Layout = "_LayoutAdmin";
}

<h2>BÁO CÁO TỔNG HỢP</h2>

<hr />

<div class="row">
    <div class="col-md-3">
        <div class="card p-3 bg-light">
            <h5>Tổng người dùng</h5>
            <strong>@ViewBag.TotalUsers</strong>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card p-3 bg-light">
            <h5>Tổng Sản phẩm</h5>
            <strong>@ViewBag.TotalProducts</strong>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card p-3 bg-light">
            <h5>Tổng Đơn hàng</h5>
            <strong>@ViewBag.TotalOrders</strong>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card p-3 bg-light">
            <h5>Tổng Doanh thu</h5>
            <strong>@String.Format("{0:N0}", ViewBag.TotalRevenue) VNĐ</strong>
        </div>
    </div>
</div>

<br />

<h4>5 đơn hàng mới nhất</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Khách hàng</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.User?.FullName</td>
                <td>@item.OrderDate?.ToString("dd/MM/yyyy")</td>
                <td>@String.Format("{0:N0}", item.TotalAmount) VNĐ</td>
            </tr>
        }
    </tbody>
</table>
