@model List<Sieu_Thi_Mini.Models.CartItem>
@using Sieu_Thi_Mini.Models

@{
    Layout = "_LayoutCustomer";
    ViewData["Title"] = "Thanh toán";

    var totalAmount = Model.Sum(x => x.Total);

    // Khách hàng được truyền từ Controller
    var customer = ViewBag.Customer as Customer;
    var addresses = customer?.ListAdress ?? new List<string>();

    bool isMissingInfo =
        customer == null ||
        string.IsNullOrWhiteSpace(customer.FullName) ||
        string.IsNullOrWhiteSpace(customer.Phone) ||
        string.IsNullOrWhiteSpace(customer.Address);
}

<style>
    .checkout-body {
        background-color: #f8f9fa;
        padding: 30px 0 50px;
    }

    .checkout-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        padding: 25px;
        margin-bottom: 20px;
    }

    .checkout-title {
        font-weight: 700;
        font-size: 1.2rem;
        margin-bottom: 20px;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
    }

    .form-control[readonly] {
        background-color: #f8f9fa;
    }

    .btn-checkout {
        background: #e31837;
        color: #fff;
        font-weight: 700;
        padding: 14px;
        border-radius: 10px;
        border: none;
    }

        .btn-checkout:hover {
            background: #c4122d;
        }
</style>

<div class="checkout-body">
    <div class="container">

        <a asp-controller="Cart" asp-action="Index" class="text-muted text-decoration-none mb-3 d-inline-block">
            <i class="bi bi-arrow-left"></i> Quay lại giỏ hàng
        </a>

        <h3 class="fw-bold mb-4">
            <i class="bi bi-credit-card-2-front text-danger me-2"></i> Checkout
        </h3>

        <form asp-action="Checkout" asp-controller="Order" asp-area="Customer" method="post">
            <div class="row">

                <!-- LEFT -->
                <div class="col-lg-7">
                    <div class="checkout-card">
                        <h4 class="checkout-title">Thông tin nhận hàng</h4>

                        <div class="mb-3">
                            <label class="form-label">Họ và tên</label>
                            <input class="form-control" value="@customer?.FullName" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input class="form-control" value="@customer?.Email" readonly />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input class="form-control" value="@customer?.Phone" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Địa chỉ giao hàng <span class="text-danger">*</span></label>

                                @if (addresses.Count > 1)
                                {
                                    <!-- 🔽 NHIỀU ĐỊA CHỈ -->
                                    <select name="ShippingAddress" class="form-select" required>
                                        @foreach (var addr in addresses)
                                        {
                                            <option value="@addr">@addr</option>
                                        }
                                    </select>
                                }
                                else if (addresses.Count == 1)
                                {
                                    <!-- 🔒 1 ĐỊA CHỈ -->
                                    <input class="form-control"
                                           name="ShippingAddress"
                                           value="@addresses[0]"
                                           readonly />
                                }
                                else
                                {
                                    <!-- ❌ KHÔNG CÓ ĐỊA CHỈ -->
                                    <input class="form-control"
                                           value="Chưa có địa chỉ giao hàng"
                                           readonly />

                                    <a href="/Customer/Profile"
                                       class="btn btn-outline-danger mt-2 w-100">
                                        Cập nhật thông tin giao hàng
                                    </a>
                                }
                            </div>
                        </div>

                        @if (isMissingInfo)
                        {
                            <div class="alert alert-warning mt-3">
                                <i class="bi bi-exclamation-triangle"></i>
                                Vui lòng cập nhật đầy đủ thông tin giao hàng trước khi đặt hàng.
                            </div>
                        }
                    </div>

                    <div class="checkout-card">
                        <h4 class="checkout-title">Phương thức thanh toán</h4>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="paymentMethod" value="COD" checked />
                            <label class="form-check-label fw-bold">
                                <i class="bi bi-cash-stack me-2"></i> Thanh toán khi nhận hàng (COD)
                            </label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" value="Bank" />
                            <label class="form-check-label fw-bold">
                                <i class="bi bi-bank me-2"></i> Chuyển khoản ngân hàng / ví điện tử
                            </label>
                        </div>
                    </div>
                </div>

                <!-- RIGHT -->
                <div class="col-lg-5">
                    <div class="checkout-card position-sticky" style="top:20px">
                        <h4 class="checkout-title">Đơn hàng</h4>

                        @foreach (var item in Model)
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span>@item.ProductName (x@item.Quantity)</span>
                                <strong>@item.Total.ToString("N0") ₫</strong>
                            </div>
                        }

                        <hr />

                        <div class="d-flex justify-content-between fs-5 fw-bold text-danger">
                            <span>Tổng cộng</span>
                            <span>@totalAmount.ToString("N0") ₫</span>
                        </div>

                        <div class="mt-4">
                            @if (isMissingInfo)
                            {
                                <a asp-controller="Profile"
                                   asp-action="Index"
                                   asp-area="Customer"
                                   class="btn btn-warning w-100">
                                    <i class="bi bi-pencil-square"></i> Cập nhật thông tin giao hàng
                                </a>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-checkout w-100">
                                    Xác nhận đặt hàng
                                </button>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
