@model List<Sieu_Thi_Mini.Models.CartItem>

@{
    Layout = ViewData["Layout"]?.ToString() ?? "_Layout";
    ViewData["Title"] = "Giỏ hàng";
    decimal tamTinh = Model?.Sum(x => x.Total) ?? 0;
}

<style>
    .cart-container {
        background-color: #f8f9fa;
        padding: 30px 0;
    }

    .cart-item {
        background: #fff;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 10px;
    }

    .product-img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 5px;
    }

    .quantity-box {
        display: flex;
        align-items: center;
        border: 1px solid #dc3545;
        border-radius: 20px;
        padding: 2px 10px;
    }

        .quantity-box button {
            border: none;
            background: none;
            color: #dc3545;
            font-weight: bold;
        }

    .summary-card {
        background: #fff;
        border-radius: 12px;
        padding: 20px;
        position: sticky;
        top: 20px;
    }

    .btn-checkout {
        background-color: #e31837;
        color: #fff;
        border-radius: 8px;
        padding: 12px;
        font-weight: bold;
        width: 100%;
        border: none;
    }
</style>

<div class="cart-container">
    <div class="container">
        <h3 class="mb-4">🛒 Giỏ hàng của bạn</h3>

        <div class="row">
            <!-- ================= DANH SÁCH SP ================= -->
            <div class="col-lg-8">

                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <div class="cart-item d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl)
                                             ? "https://via.placeholder.com/400x400?text=No+Image"
                                             : Url.Content("~/upload/" + item.ImageUrl))"
                                     class="product-img me-3"
                                     alt="@item.ProductName" />
                                <div>
                                    <h6 class="mb-1">@item.ProductName</h6>
                                    <small class="text-muted">
                                        @item.Price.ToString("N0") ₫
                                    </small>
                                </div>
                            </div>

                            <div class="text-end">
                                <div class="fw-bold mb-1">
                                    @item.Total.ToString("N0") ₫
                                </div>

                                <div class="d-flex align-items-center justify-content-end">
                                    <form asp-action="UpdateQuantity"
                                          asp-controller="Cart"
                                          asp-area="Customer"
                                          method="post">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="hidden" name="delta" value="-1" />
                                        <button class="btn btn-sm btn-outline-danger">−</button>
                                    </form>

                                    <span class="mx-2">@item.Quantity</span>

                                    <form asp-action="UpdateQuantity"
                                          asp-controller="Cart"
                                          asp-area="Customer"
                                          method="post">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="hidden" name="delta" value="1" />
                                        <button class="btn btn-sm btn-outline-danger">+</button>
                                    </form>

                                    <form asp-action="Remove"
                                          asp-controller="Cart"
                                          asp-area="Customer"
                                          method="post"
                                          class="ms-2">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info">
                        Giỏ hàng của bạn đang trống.
                    </div>
                }
            </div>

            <!-- ================= TỔNG TIỀN ================= -->
            <div class="col-lg-4">
                <div class="summary-card shadow-sm">
                    <h5>Tóm tắt đơn hàng</h5>
                    <hr />

                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính</span>
                        <span>@tamTinh.ToString("N0") ₫</span>
                    </div>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển</span>
                        <span>0 ₫</span>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between fw-bold fs-5 mb-3">
                        <span>Thành tiền</span>
                        <span>@tamTinh.ToString("N0") ₫</span>
                    </div>

                    <a asp-area="Customer"
                       asp-controller="Order"
                       asp-action="Checkout"
                       class="btn-checkout text-center text-decoration-none d-block">
                        Tiến hành thanh toán
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
